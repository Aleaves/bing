<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.smartcode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.CanvasActivity"
            android:label="@string/canvas_view"
            />

        <activity android:name=".ui.BrizerActivity"
            android:label="@string/brizer_page"
            />

        <activity android:name=".ui.BookPageActivity"
            android:label="@string/reader_page"
            />

        <activity android:name=".ui.XformodeActivity"
            android:label="@string/xfermode"
            />
    </application>

</manifest>